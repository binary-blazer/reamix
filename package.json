{
  "name": "reamix",
  "version": "1.0.0-beta6.2",
  "description": "Monot-based browser",
  "main": "main.js",
  "scripts": {
    "test": "npx electron --trace-warnings .",
    "build": "npx electron-builder",
    "makeEnv": "src\\environment.cmd"
  },
  "author": "VCborn <support@vcborn.com>",
  "homepage": "https://vcborn.com/services/reamix/",
  "license": "monochrome",
  "devDependencies": {
    "electron": "^17.2.0",
    "electron-builder": "^22.14.13"
  },
  "build": {
    "appId": "com.vcborn.reamix",
    "productName": "reamix",
    "files": [
      "!.git",
      "!.dist",
      "node_modules",
      "src",
      "main.js",
      "package-lock.json",
      "package.json"
    ],
    "asar": false,
    "win": {
      "icon": "src/image/logo.ico",
      "target": "nsis",
      "legalTrademarks": "Copyright 2021 VCborn"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "src/image/logo.ico"
    },
    "linux": {
      "icon": "src/image/icon.icns",
      "target": "deb"
    },
    "appImage": {
      "category": "Utility",
      "synopsis": "Reamix v1.0.0-beta6.2"
    },
    "deb": {
      "category": "Utility",
      "synopsis": "Reamix v1.0.0-beta6.2"
    }
  },
  "dependencies": {
    "electron-context-menu": "^3.1.2"
  }
}
