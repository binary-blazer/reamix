{
  "name": "reamix",
  "version": "1.0.0-beta6.2",
  "description": "Monot-based browser",
  "main": "main.js",
  "scripts": {
    "test": "npx electron .",
    "build": "npx electron-builder",
    "makeEnv": "src\\environment.cmd"
  },
  "author": "VCborn <support@vcborn.com>",
  "homepage": "https://vcborn.com/services/reamix/",
  "license": "monochrome",
  "devDependencies": {
    "electron": "^17.2.0",
    "electron-builder": "^22.14.13"
  },
  "build": {
    "appId": "com.vcborn.reamix",
    "productName": "reamix",
    "files": [
      "!.git",
      "!.dist",
      "node_modules",
      "src",
      "main.js",
      "package-lock.json",
      "package.json"
    ],
    "asar": false,
    "win": {
      "icon": "src/image/logo.ico",
      "target": "portable",
      "legalTrademarks": "Copyright 2021 VCborn"
    },
    "nsis": {
      "artifactName": "${productName}_${version}_setup.${ext}",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "src/image/logo.ico"
    },
    "portable": {
      "artifactName": "${productName}_${version}_portable.${ext}"
    },
    "mac": {
      "icon": "src/image/logo.icns",
      "target": "dmg"
    },
    "linux": {
      "icon": "src/image/icon.icns",
      "target": "appImage"
    },
    "appImage": {
      "artifactName": "${productName}_${version}_${arch}.${ext}",
      "category": "Utility",
      "synopsis": "Reamix v1.0.0-beta6.2"
    },
    "deb": {
      "artifactName": "${productName}_${version}_${arch}.${ext}",
      "category": "Utility",
      "synopsis": "Reamix v1.0.0-beta6.2"
    },
    "rpm": {
      "artifactName": "${productName}-${version}.${arch}.${ext}",
      "category": "Utility",
      "synopsis": "Reamix v1.0.0-beta6.2"
    }
  },
  "dependencies": {
    "download-crx": "^1.1.0",
    "electron-chrome-extensions": "^3.9.0",
    "electron-context-menu": "^3.1.2",
    "fs-extra": "^10.0.1",
    "nodejs-file-downloader": "^4.9.3",
    "unzip-crx-3": "^0.2.0"
  }
}
